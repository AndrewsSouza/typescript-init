{
    "compileOnSave": false,
    "compilerOptions": {
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": false,
        "lib": [
            "dom",
            "es2016"
        ],
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "tests"
    ]
}
