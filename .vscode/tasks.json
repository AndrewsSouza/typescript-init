{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "suppressTaskName": true,
    "showOutput": "always",
    "echoCommand": true,
    "tasks": [
        {
            "taskName": "update packages",
            "args": [
                "update"
            ]
        },
        {
            "taskName": "build",
            "isBuildCommand": true,
            "args": [
                "run",
                "build"
            ]
        },
        {
            "taskName": "build (minify)",
            "isBuildCommand": true,
            "args": [
                "run",
                "build-min"
            ]
        },
        {
            "taskName": "deploy all",
            "isBuildCommand": true,
            "args": [
                "run",
                "deploy"
            ]
        },
        {
            "taskName": "check sources",
            "isTestCommand": true,
            "args": [
                "run",
                "check"
            ]
        },
        {
            "taskName": "run tests",
            "isTestCommand": true,
            "args": [
                "run",
                "test"
            ]
        },
        {
            "taskName": "run tests (watch and debug)",
            "isTestCommand": true,
            "args": [
                "run",
                "test-watch-and-debug"
            ]
        },
        {
            "taskName": "generate doc",
            "isBuildCommand": true,
            "args": [
                "run",
                "doc"
            ]
        },
        {
            "taskName": "build client",
            "isBuildCommand": true,
            "args": [
                "run",
                "client"
            ]
        },
        {
            "taskName": "build client (watch)",
            "isBuildCommand": true,
            "args": [
                "run",
                "client-watch"
            ]
        }
    ]
}
