{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "suppressTaskName": true,
    "showOutput": "always",
    "echoCommand": true,
    "tasks": [
        {
            "taskName": "update",
            "args": [
                "update"
            ]
        },
        {
            "taskName": "build",
            "isBuildCommand": true,
            "args": [
                "run",
                "build"
            ]
        },
        {
            "taskName": "build-min",
            "isBuildCommand": true,
            "args": [
                "run",
                "build-min"
            ]
        },
        {
            "taskName": "deploy",
            "isBuildCommand": true,
            "args": [
                "run",
                "deploy"
            ]
        },
        {
            "taskName": "check",
            "isTestCommand": true,
            "args": [
                "run",
                "check"
            ]
        },
        {
            "taskName": "test",
            "isTestCommand": true,
            "args": [
                "run",
                "test"
            ]
        },
        {
            "taskName": "doc",
            "isBuildCommand": true,
            "args": [
                "run",
                "doc"
            ]
        },
        {
            "taskName": "client",
            "isBuildCommand": true,
            "args": [
                "run",
                "client"
            ]
        },
        {
            "taskName": "client-watch",
            "isBuildCommand": true,
            "args": [
                "run",
                "client-watch"
            ]
        }
    ]
}
